<% include ./partials/_header %>
<body style="margin: 10px">
  <% if (!user) { %>
  <h1>Please login to view your urls</h1>
  <% } else { %>
  <h1>Here is your URL List</h1>
  <% } %>
  <ul>
    <% for(let url in urls) { %>
     <div class="container">
       <div class="row" style="margin-top:10px">
          <div class="col-md-7">
             <li style="font-size: 20px"><%= `${url} ---> ` %><a href=<%= `${urls[url].longUrl}` %> ><%= `${urls[url].longUrl}` %></a></li>
          </div>
          <div class="col-md-1">
            <form class="form-inline" method="GET" action= <%= `/urls/${url}` %> >
                <button class="btn btn-warning" type="submit">Edit</button>
            </form>
          </div>
          <div class="col-md-1">
              <form class="form-inline" method="POST" action= <%= `/urls/${url}/delete` %> >
                    <button class="btn btn-danger" type="submit">Delete 🗑️</button>
                </form>
          </div>
         </div>
      </div>
    <% } %>
  </ul>
</body>
</html>